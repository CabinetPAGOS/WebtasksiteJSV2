{% extends 'base.html.twig' %}

{% block title %}Modification du forum - ADMIN{% endblock %}

{% block head %}
	<!-- CSS -->
    <link href="{{ asset('./assets/css/modificationForumAdmin.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
	{% include('/partials/navigationAdmin.html.twig') %}

	<div class="container-custom">
		<div class="form-container">
			<h2>Modifier le Contenu du Forum</h2>
			{{ form_start(form) }}
				<div class="form-group">
					{{ form_row(form.content) }}
				</div>
				<button class="btn btn-primary">Enregistrer</button>
			{{ form_end(form) }}

			<a href="{{ path('app_adminforum', {id: forum.client.id}) }}" class="back-link"><i class="fas fa-arrow-left"></i> Retour à la liste</a>
		</div>
	</div>

	<!-- Bootstrap JS et dépendances -->
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
	<script src="{{ asset('./assets/js/modificationForumAdmin.js') }}"></script>
{% endblock %}