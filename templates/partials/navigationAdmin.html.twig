									<a class="dropdown-item {% if app.request.attributes.get('_route') == 'app_gestionuser' %}active{% endif %}"
										href="{{ path('app_gestionuser') }}">
										Gestion utilisateur
									</a>
								</li>
								<li>
									<a class="dropdown-item {% if app.request.attributes.get('_route') == 'app_register' %}active{% endif %}"
